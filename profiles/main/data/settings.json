{
    "files.associations": {
        "renv.lock": "json"
    },
    "workbench.colorTheme": "GitHub Dark Default",
    "positron.assistant.enable": true,
    "workbench.iconTheme": "material-icon-theme",
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "\"Jetbrains Mono\"",
    "editor.fontSize": 13,
    "git.autofetch": true,
    "syncSettings.crons": {
        "upload": "0 */4 * * *"  // Upload every 4 hours for backup
    },
    "window.newWindowProfile": "Default",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "syncSettings.additionalFiles": [
    ],
    "syncSettings.hooks.postDownload": "",
    "workbench.activityBar.location": "top", 
    "latex-workshop.view.pdf.invert": 1.0,
    "workbench.tree.indent": 10,
    "syncSettings.ignoredSettings": [
    ],
    "workbench.editor.autoLockGroups": {
        "workbench.editor.positronNotebook": true,
        "jupyter-notebook": true,
        "latex-workshop-pdf-hook": true,
        "workbench.editor.positronDataExplorer": true
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": "on"
        }
    },
    "latex-workshop.view.pdf.zoom": "page-width",
    "editor.minimap.enabled": true,
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font",
    "git.openRepositoryInParentFolders": "never",
    "terminal.integrated.env.windows": {
        "MY_VAR": "value"
    },
    "terminal.integrated.environmentChangesRelaunch": false,
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "breadcrumbs.enabled": false,
    "anki.md.updateCards": true,
    "anki.md.insertNewCardID": true,
    "anki.md.card.separator": "\n\n",
    "anki.md.card.frontBackSeparator": "\\s*::\\s*",
    "anki.md.card.tagPattern": "^#+\\s*",
}

